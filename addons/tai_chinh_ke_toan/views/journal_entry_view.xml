<odoo>
    <record id="action_finance_journal" model="ir.actions.act_window">
        <field name="name">Bút toán</field>
        <field name="res_model">tai_chinh_ke_toan.journal_entry</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_finance_journal"
              name="Bút toán"
              parent="menu_finance_root"
              action="action_finance_journal"/>

    <record id="view_finance_journal_tree" model="ir.ui.view">
        <field name="name">finance.journal.tree</field>
        <field name="model">tai_chinh_ke_toan.journal_entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_finance_journal_form" model="ir.ui.view">
        <field name="name">finance.journal.form</field>
        <field name="model">tai_chinh_ke_toan.journal_entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <notebook>
                        <page string="Journal Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="account_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
